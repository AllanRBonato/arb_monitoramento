generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          String @id @default(uuid())
  name        String @unique 
  level       Int    @default(10) 
  label       String @default("Leitura")
  users       User[]
  @@map("roles")
}

model Sector {
  id    String @id @default(uuid())
  name  String @unique
  users User[]
  @@map("sectors")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String
  avatar    String?  @db.Text
  
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])
  sectorId  String
  sector    Sector   @relation(fields: [sectorId], references: [id])
  
  notes            Note[]
  passwordRequests PasswordRequest[]

  createdAt DateTime @default(now())
  @@map("users")
}

model Note {
  id         String   @id @default(uuid())
  title      String
  content    String?  @db.Text
  dueDate    String?
  importance String   @default("Média")
  color      String   @default("blue")
  completed  Boolean  @default(false)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
  @@map("notes")
}

model PasswordRequest {
  id        String   @id @default(uuid())
  status    String   @default("PENDING")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@map("password_requests")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  excelLink   String?  

  rbIp        String
  rbPort      Int      @default(8728) // Porta API (Interna)
  rbWinboxPort Int     @default(8291) // Porta Winbox (Visual)
  rbUser      String
  rbPassword  String

  providers   Provider[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

// (O model Provider já aceita contact String?, então está ok)

// NOVA TABELA: Provedoras (Vivo, Claro, Oi, etc)
model Provider {
  id        String  @id @default(uuid())
  name      String  // Nome (ex: Vivo)
  vlan      String? // VLAN (ex: 100)
  contact   String? // Contato (ex: 0800...)
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("providers")
}