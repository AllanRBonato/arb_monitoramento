generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          String @id @default(uuid())
  name        String @unique // Ex: ADMIN_MASTER
  level       Int    @default(10) // 100=Chefe, 50=Gerente, 10=Pe√£o
  label       String @default("Leitura") // Ex: "Acesso Total", "Visualizar"
  users       User[]

  @@map("roles")
}

model Sector {
  id    String @id @default(uuid())
  name  String @unique
  users User[]
  @@map("sectors")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String
  avatar    String?  @db.Text  // <--- CAMPO NOVO (Pode ser nulo)
  
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])
  sectorId  String
  sector    Sector   @relation(fields: [sectorId], references: [id])
  createdAt DateTime @default(now())

  @@map("users")
}