generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    String @id @default(uuid())
  name  String @unique
  level Int    @default(10)
  label String @default("Leitura")
  users User[]

  @@map("roles")
}

model Sector {
  id    String @id @default(uuid())
  name  String @unique
  users User[]

  @@map("sectors")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String
  phone    String
  avatar   String? @db.Text

  viewProjectId String?
  viewProject   Project? @relation("ProjectViewers", fields: [viewProjectId], references: [id])

  roleId String
  role   Role   @relation(fields: [roleId], references: [id])

  sectorId String
  sector   Sector @relation(fields: [sectorId], references: [id])

  notes            Note[]
  passwordRequests PasswordRequest[]

  createdAt DateTime @default(now())

  @@map("users")
}

model Note {
  id         String   @id @default(uuid())
  title      String
  content    String?  @db.Text
  dueDate    String?
  importance String   @default("MÃ©dia")
  color      String   @default("blue")
  completed  Boolean  @default(false)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@map("notes")
}

model PasswordRequest {
  id        String   @id @default(uuid())
  status    String   @default("PENDING")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("password_requests")
}

model Project {
  id          String  @id @default(uuid())
  name        String
  description String?
  excelLink   String?

  rbIp         String
  rbPort       Int    @default(8728)
  rbWinboxPort Int    @default(8291)
  rbUser       String
  rbPassword   String

  providers Provider[]

  viewers User[] @relation("ProjectViewers")
  // ---------------------

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

model Provider {
  id      String  @id @default(uuid())
  name    String
  vlan    String?
  contact String?

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("providers")
}